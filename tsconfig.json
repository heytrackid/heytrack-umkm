{
  "compilerOptions": {
    // Target & Lib
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // Module Resolution
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    // Emit
    "noEmit": true,
    "incremental": true,
    // JSX
    "jsx": "react-jsx",
    // Strict Type Checking (All Enabled)
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // Additional Checks (Stricter)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,
    // Path Aliases
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/inventory": [
        "./src/modules/inventory"
      ],
      "@/orders": [
        "./src/modules/orders"
      ],
      "@/recipes": [
        "./src/modules/recipes"
      ],
      "@/finance": [
        "./src/modules/finance"
      ],
      "@/production": [
        "./src/modules/production"
      ],
      "@/reports": [
        "./src/modules/reports"
      ]
    },
    // Next.js Plugin
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/services/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "supabase/functions",
    "scripts"
  ]
}
