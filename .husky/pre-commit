#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Type checking
echo "📝 Running TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript errors found. Please fix them before committing."
  exit 1
fi

# Linting
echo "🧹 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting errors found. Please fix them before committing."
  exit 1
fi

# Bundle size check (only if .bundle-stats.json exists)
if [ -f ".bundle-stats.json" ]; then
  echo "📊 Checking bundle size..."
  npm run build:monitor
  if [ $? -ne 0 ]; then
    echo "⚠️ Bundle size check completed with warnings. Please review."
  fi
fi

echo "✅ All pre-commit checks passed!"
