#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Type checking
echo "ğŸ“ Running TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix them before committing."
  exit 1
fi

# Linting
echo "ğŸ§¹ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting errors found. Please fix them before committing."
  exit 1
fi

# Bundle size check (only if .bundle-stats.json exists)
if [ -f ".bundle-stats.json" ]; then
  echo "ğŸ“Š Checking bundle size..."
  npm run build:monitor
  if [ $? -ne 0 ]; then
    echo "âš ï¸ Bundle size check completed with warnings. Please review."
  fi
fi

echo "âœ… All pre-commit checks passed!"
